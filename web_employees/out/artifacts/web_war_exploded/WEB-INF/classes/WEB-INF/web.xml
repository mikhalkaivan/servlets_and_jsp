<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="3.0">


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>main.java.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginSevlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>main.java.servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QueryForHolidayServlet</servlet-name>
        <servlet-class>main.java.servlets.QueryForHolidayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryForHolidayServlet</servlet-name>
        <url-pattern>/QueryForHolidayServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ManagerResponseServlet</servlet-name>
        <servlet-class>main.java.servlets.ManagerResponseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerResponseServlet</servlet-name>
        <url-pattern>/ManagerResponseServlet</url-pattern>
    </servlet-mapping>

</web-app>
